<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Start.StartActivity">

    <ImageView
        android:id="@+id/image_icon_start"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="40dp"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="엄마를 부탁해"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_icon_start"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/text_subtitle_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="I love you mom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_start" />

    <Button
        android:id="@+id/btn_signin_start"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/roundstyle_start_signin_btn"
        android:text="로그인"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_subtitle_start"
        app:layout_constraintVertical_bias="0.35"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/btn_signup_start"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundstyle_start_signup_btn"
        android:text="회원가입"
        android:textColor="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_signin_start"
        app:layout_constraintWidth_percent="0.8" />
</android.support.constraint.ConstraintLayout>