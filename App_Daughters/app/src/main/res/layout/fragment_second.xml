<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대전화"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/edit_signup_phone_number"
        app:layout_constraintLeft_toLeftOf="@id/edit_signup_phone_number" />

    <EditText
        android:id="@+id/edit_signup_phone_number"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/roundstyle_signup_edit"
        android:hint="전화번호 입력"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/edit_signup_certification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="인증"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@id/edit_signup_phone_number"
        app:layout_constraintLeft_toRightOf="@id/edit_signup_phone_number"
        app:layout_constraintRight_toRightOf="@id/edit_signup_certification"
        app:layout_constraintTop_toTopOf="@id/edit_signup_phone_number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/edit_signup_certification"
        app:layout_constraintLeft_toLeftOf="@id/edit_signup_certification" />

    <EditText
        android:id="@+id/edit_signup_certification"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundstyle_signup_edit"
        android:hint="인증번호 입력"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_signup_phone_number"
        app:layout_constraintWidth_percent="0.7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/edit_signup_name"
        app:layout_constraintLeft_toLeftOf="@id/edit_signup_name" />

    <EditText
        android:id="@+id/edit_signup_name"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundstyle_signup_edit"
        android:hint="이름 입력"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/edit_signup_certification"
        app:layout_constraintTop_toBottomOf="@id/edit_signup_certification"
        app:layout_constraintWidth_percent="0.35" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/edit_signup_age"
        app:layout_constraintLeft_toLeftOf="@id/edit_signup_age" />

    <EditText
        android:id="@+id/edit_signup_age"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/roundstyle_signup_edit"
        android:hint="나이 입력"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="@id/edit_signup_certification"
        app:layout_constraintTop_toBottomOf="@id/edit_signup_certification"
        app:layout_constraintWidth_percent="0.35" />

    <TextView
        android:id="@+id/text_signup_inform_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*선택(부모정보)"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/edit_signup_name_parent"
        app:layout_constraintLeft_toLeftOf="@id/edit_signup_name_parent" />

    <EditText
        android:id="@+id/edit_signup_name_parent"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundstyle_signup_edit"
        android:hint="이름 입력"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_signup_name"
        app:layout_constraintWidth_percent="0.7" />

    <EditText
        android:id="@+id/edit_signup_age_parent"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/roundstyle_signup_edit"
        android:hint="나이 입력"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/edit_signup_name_parent"
        app:layout_constraintTop_toBottomOf="@id/edit_signup_name_parent"
        app:layout_constraintWidth_percent="0.4" />


</android.support.constraint.ConstraintLayout>