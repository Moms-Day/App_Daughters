<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn.SignInActivity">

    <ImageView
        android:id="@+id/image_icon_sign_in"
        android:layout_width="125dp"
        android:layout_height="84dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo_sign_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_id_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="아이디"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/edit_id_sign_in"
        app:layout_constraintLeft_toLeftOf="@+id/edit_id_sign_in" />

    <EditText
        android:id="@+id/edit_id_sign_in"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:background="@drawable/roundstyle_signup_edit"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_icon_sign_in"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/text_pw_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="비밀번호"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/edit_pw_sign_in"
        app:layout_constraintTop_toBottomOf="@id/edit_id_sign_in" />

    <EditText
        android:id="@+id/edit_pw_sign_in"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/roundstyle_signup_edit"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_pw_sign_in"
        app:layout_constraintWidth_percent="0.8" />

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/roundstyle_start_signin_btn"
        android:text="로그인"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_icon_sign_in"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/text_sign_in_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="회원가입"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/text_sign_in_division"
        app:layout_constraintEnd_toStartOf="@id/text_sign_in_division"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_sign_in_division" />

    <TextView
        android:id="@+id/text_sign_in_division"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="|"
        app:layout_constraintEnd_toStartOf="@id/text_sign_in_find_id_pw"
        app:layout_constraintStart_toEndOf="@id/text_sign_in_sign_up"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_in" />

    <TextView
        android:id="@+id/text_sign_in_find_id_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="아이디/비밀번호 찾기"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/text_sign_in_division"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_sign_in_division"
        app:layout_constraintTop_toTopOf="@id/text_sign_in_division" />
</android.support.constraint.ConstraintLayout>