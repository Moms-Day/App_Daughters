<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_inform_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="하루일정표"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/text_inform_schedule"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/text_inform_meal_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="식단표"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_schedule" />/>
    <TextView
        android:id="@+id/text_inform_breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="아침"
        android:layout_marginLeft="60dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_inform_lunch"
        app:layout_constraintTop_toBottomOf="@id/text_inform_meal_menu" />

    <TextView
        android:id="@+id/text_inform_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="점심"
        app:layout_constraintLeft_toRightOf="@id/text_inform_breakfast"
        app:layout_constraintRight_toLeftOf="@id/text_inform_dinner"
        app:layout_constraintTop_toBottomOf="@id/text_inform_meal_menu" />

    <TextView
        android:id="@+id/text_inform_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="저녁"
        android:layout_marginRight="60dp"
        app:layout_constraintLeft_toRightOf="@id/text_inform_lunch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_inform_meal_menu" />

    <android.support.v7.widget.CardView
        android:id="@+id/card_inform_meal_breakfast"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/colorCardView"
        app:layout_constraintLeft_toLeftOf="@id/text_inform_breakfast"
        app:layout_constraintRight_toRightOf="@id/text_inform_breakfast"
        app:layout_constraintTop_toBottomOf="@id/text_inform_breakfast">

        <TextView
            android:id="@+id/text_inform_meal_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_inform_meal_lunch"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="@id/text_inform_lunch"
        app:layout_constraintRight_toRightOf="@id/text_inform_lunch"
        app:layout_constraintTop_toBottomOf="@id/text_inform_lunch">

        <TextView
            android:id="@+id/text_inform_meal_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_inform_meal_dinner"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="@id/text_inform_dinner"
        app:layout_constraintRight_toRightOf="@id/text_inform_dinner"
        app:layout_constraintTop_toBottomOf="@id/text_inform_dinner">

        <TextView
            android:id="@+id/text_inform_meal_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>