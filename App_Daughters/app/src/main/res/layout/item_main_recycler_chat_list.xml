<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/chat_list_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/chat_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#4d4d4d"
        app:layout_constraintLeft_toRightOf="@id/chat_list_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_list_text"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/chat_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 채팅 내용"
        android:textColor="#41000000"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/chat_list_name"
        app:layout_constraintTop_toBottomOf="@id/chat_list_name"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22:10"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="5dp"
        android:textColor="#41000000"/>
</android.support.constraint.ConstraintLayout>